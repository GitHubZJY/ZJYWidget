<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zjywidget.widget.profileslide.YProfileSlideView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        app:profile_slide_progress_color="@color/green"
        app:profile_slide_corner="22dp"/>

    <com.zjywidget.widget.profileslide.YProfileSlideView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        app:profile_slide_progress_color="@color/colorAccent"
        app:profile_slide_slider_color="@color/colorAccent"
        app:profile_slide_corner="0dp"
        android:visibility="visible"/>

    <com.zjywidget.widget.profileslide.YProfileSlideView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        app:profile_slide_width="50dp"
        app:profile_slide_tip_text=""
        app:profile_slide_progress_color="@color/green"
        app:profile_slide_slider_color="@color/green"
        app:profile_slide_corner="0dp"
        android:visibility="visible"/>

</LinearLayout>